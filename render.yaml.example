services:
  - type: web
    name: sora-video-stitcher-api
    env: node
    plan: free
    buildCommand: chmod +x build.sh && ./build.sh
    startCommand: npm start
    envVars:
      - key: NODE_ENV
        value: production
      - key: PORT
        value: 3000
      - key: PUBLIC_URL
        sync: false
        # Set this to your actual Render URL: https://your-service-name.onrender.com
      - key: SORA_API_KEY
        sync: false
        # Add your Sora API key in Render dashboard
      - key: SORA_API_BASE_URL
        value: https://api.kie.ai/api/v1
      - key: AIRTABLE_API_KEY
        sync: false
        # Add your Airtable Personal Access Token in Render dashboard
      - key: AIRTABLE_BASE_ID
        sync: false
        # Add your Airtable Base ID (starts with app...) in Render dashboard
      - key: AIRTABLE_TABLE_NAME
        sync: false
        # Add your Airtable table name in Render dashboard
      - key: UPSTASH_REDIS_REST_URL
        sync: false
        # Add your Upstash Redis REST URL in Render dashboard
      - key: UPSTASH_REDIS_REST_TOKEN
        sync: false
        # Add your Upstash Redis REST Token in Render dashboard
      - key: JOB_TIMEOUT
        value: 600000
    autoDeploy: true
